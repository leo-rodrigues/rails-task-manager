<h1><%= @task.title %></h1>

<h3><%= @task.details %></h3>
<p>
  <%=
    if @task.completed == true
      "This task is completed"
    else "This task is not completed"
    end
  %>
</p>
<p><%= link_to "Edit task", edit_task_path(@task) %></p>
<p><%= link_to "Delete task", task_path(@task), method: :delete, data: { confirm: "Are you sure?" }%></p>
<p><%= link_to "Back to list", tasks_path %></p>
